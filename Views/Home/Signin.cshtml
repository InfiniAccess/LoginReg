@{
    ViewData["Title"] = "Sign In";
}

@model LoginUser

<div class="text-center">

    <form action="/Login" method="post">
        <h2 class="text-center">Login</h2>
        <div class="form-group">
            <label asp-for="LoginEmail">Email:</label>
            <input asp-for="LoginEmail" class="form-control">
            <span class="text-danger" asp-validation-for="LoginEmail"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginPassword">Password:</label>
            <input asp-for="LoginPassword" class="form-control">
            <span class="text-danger" asp-validation-for="LoginPassword"></span>
        </div>

        <input type="submit" value="Login">
    </form>

</div>